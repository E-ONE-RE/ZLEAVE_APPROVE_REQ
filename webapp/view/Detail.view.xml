<mvc:View
	controllerName="zetms.controller.Detail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar"
	xmlns:html="http://www.w3.org/1999/xhtml">

	<semantic:DetailPage
		id="page"
		navButtonPress="onNavBack"
		showNavButton="{device>/system/phone}"
		title="{i18n>detailTitle}"
		busy="{detailView>/busy}"
		busyIndicatorDelay="{detailView>/delay}">
		
		
			  <html:style>
	  	
	 

   #application-LeaveRequestApproval-display-component---detail--objectHeader {


                                 }

          </html:style>

		<semantic:content>
			<ObjectHeader
				id="objectHeader"
				title="Richiesta nÂ° {ZrequestId}"
				numberUnit="Giorno/i"
				icon="sap-icon://general-leave-request">
				<attributes>
				<ObjectAttribute
					text="Richiesta di { path:'ZabsType', formatter:'.formatter.formatAbsence'} inserita da {UnameToName/NameLast} {UnameToName/NameFirst}"
					/>
				</attributes>
				<statuses>
				<ObjectStatus
				text="{ZreqStatus}"
				state="{ path: 'ZreqStatus', formatter: '.formatter.formatReqStatus'}"/>
				</statuses>
			</ObjectHeader>
			<IconTabBar
				id="iconTabBar"
				class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter
						id="iconTabBarFilter1"
						icon="sap-icon://hint"
						tooltip="{i18n>detailIconTabBarInfo}">
			   <Table
				id="lineItemsList"
				width="auto"
				items="{ToLeaveReqPos}"
				updateFinished="onListUpdateFinished"
				noDataText="{i18n>detailLineItemTableNoDataText}"
				busyIndicatorDelay="{detailView>/lineItemTableDelay}"
				class="sapUiResponsiveMargin">
				<headerToolbar>
					<Toolbar id="lineItemsToolbar">
						<Title
							id="lineItemsHeader"
							text="{detailView>/lineItemListTitle}"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="{i18n>detailLineItemTableIDColumn}"/>
					</Column>
							<Column>
						<Text text="Ora inizio"/>
					</Column>
							<Column>
						<Text text="Ora fine"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier
								title="{path: 'Zdate', formatter:'.formatter.formatDate'}"/>
									<ObjectIdentifier
								title="{Ztimestart}"/>
									<ObjectIdentifier
								title="{Ztimeend}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
					</IconTabFilter>
					<IconTabFilter
						id="iconTabBarFilter2"
						icon="sap-icon://attachment"
						tooltip="Allegati">
					</IconTabFilter>
						<IconTabFilter
						id="iconTabBarFilter3"
						icon="sap-icon://notes"
						tooltip="Note">
								<List id="commentList"
								showSeparators="Inner"
							    noDataText="Nothing to show"
						        backgroundDesign="Translucent">
								<items>
								<FeedListItem
								    sender="{Tmsuser}"
								    timestamp="{ path: 'ZtimeRec', formatter: '.formatter.formatTime'}"
								    info="Richiesta {ZabsType}"
									icon="sap-icon://employee"
									iconDensityAware="false"
									text="{Znote}"/>
									</items>
								</List>
					</IconTabFilter>
				</items>
			</IconTabBar>
		
		</semantic:content>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction
				id="shareEmail"
				press="onShareEmailPress"/>
		</semantic:sendEmailAction>

		<semantic:shareInJamAction>
			<semantic:ShareInJamAction
				id="shareInJam"
				visible="{FLP>/isShareInJamActive}"
				press="onShareInJamPress"/>
		</semantic:shareInJamAction>
		


		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton
				id="shareTile"
				title="{detailView>/saveAsTileTitle}"/>
		</semantic:saveAsTileAction>
		
		       <semantic:positiveAction>
					<semantic:PositiveAction id="btn1" text="Approva" press="onButtonPress"/>
				</semantic:positiveAction>
				<semantic:negativeAction>
					<semantic:NegativeAction id="btn2" text="Rifiuta" press="onButtonPress"/>
				</semantic:negativeAction>
	
		
	</semantic:DetailPage>

</mvc:View>